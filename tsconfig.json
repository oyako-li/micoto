{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "es2021",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*", "./src/types/*"],
      "@assets/*": ["assets/*"],
      "@main/*": ["src/main/*"],
      "@renderer/*": ["src/renderer/*"],
      "@models/*": ["src/models/*"],
      "@type/*": ["src/types*"],
      "@src/*": ["src/*"],
      "@framework/*": ["Framework/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "paths": {
        "*": ["node_modules/*", "./src/types/*"],
      }
  }},
  "include": [
    "src/**/*.ts",
    "Core/*.ts", 
    "src/**/*.tsx" 
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
